<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">

   <Label text="Titel: {i18n>appTitle}" width="100%" textAlign="Center"/>
   <Label text="{i18n>appDescription}" width="100%" textAlign="Center"/>
   <Button
      text="{i18n>showHelloButtonText}"
      icon="sap-icon://action-settings"
      press=".onShowHello"/>

      <Button
      text="{i18n>buttonText}"
      icon="sap-icon://home"
      enabled="false"
      id="button2"
      press=".onShowsecondButton"/>
      
      <Input
      value="{/recipient/name}"
      description="{i18n>hello} {/recipient/name}, len: {/recipient/length}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>