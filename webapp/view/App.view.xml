<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Button
      text="Say Hello"
      icon="sap-icon://action-settings"
      press=".onShowHello"/>

      <Button
      text="{i18n>showHelloButtonText}"
      icon="sap-icon://home"
      enabled="false"
      id="button2"
      press=".onShowsecondButton"/>
      
      <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}, len: {/recipient/length}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>