<!-- 
    Fragmente haben keine Controller, sinnvoll wenn mehrfach genutzt werden soll.
 -->
<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="helloDialog"
      title="Hello {/recipient/name}"
      icon="sap-icon://collision"
      stretch="true">
        <content>
        <Label text="Beispieltext"/>
        <core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin"/>
        </content>
        <beginButton>
            <Button
             text="{i18n>dialogCloseButtonText}"
             press=".onCloseDialog"/>
        </beginButton>
   </Dialog>
</core:FragmentDefinition>